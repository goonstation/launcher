{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-show",
    "core:window:allow-close",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://api.goonhub.com" },
        { "url": "https://raw.githubusercontent.com" },
        { "url": "https://www.byond.com" }
      ]
    },
    "opener:default",
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "byond:*"
        },
        {
          "url": "https://goonhub.com"
        },
        {
          "url": "https://discord.gg/zd8t6pY"
        },
        {
          "url": "https://github.com/goonstation/*"
        },
        {
          "url": "https://wiki.ss13.co"
        }
      ]
    },
    "fs:default",
    "updater:default",
    "process:default",
    "fs:allow-appcache-write",
    "fs:allow-appdata-write"
  ]
}
